{% extends 'base.jinja' %}

{% block content %}

{{ form.hidden_tag()}}
<div>
    <form action="" method="POST">
        <fieldset class="form_group">
            <legend>Register Here</legend>
            <div>
                {{ form.username.label }} <br>
                {{ form.username(size=32) }}
            </div>
            <div>
                {{ form.email.label }} <br>
                {{ form.email(size=32) }}
                {% for error in form.email.errors%}
                <span> {{ error }}</span>
                {% endfor %}
            </div>
            <div>
                {{ form.password.label }} <br>
                {{ form.password(size=32) }}
            </div>
        </fieldset>
        <div>
            {{ form.submit }}
        </div>
    </form>
    <div>
        <p> Already have an account?
        </p>
        <a href="{{ url_for('auth.signin') }}">Sign In Here</a>
    </div>
</div>

{% endblock content %}
